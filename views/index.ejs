<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Form</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">

        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" name="title" placeholder="Title Goes Here" class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none">
                <textarea name="textarea" id="Tarea" placeholder="Write yor Task Details here" class="block px-5 py-2 bg-zinc-800 resize-none mt-2 w-full rounded-md outline-none"></textarea>
                <input type="submit" value="Create Task" class="mt-2 bg-blue-600 px-5 py-2 rounded-md">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3 p-10">

            <% if (files.length > 0) { %>
                <% files.forEach(function (val) { %>
                    <div class="task m-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl traking-tighter"><%= val %></h1>
                        <a href="" class="text-blue-500 inline-block mt-3">Read more</a>
                        <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt sapiente dicta itaque fugit.</p> -->
                    </div>
                <% }) %>
        <% } else{ %>
            <h3 class="text-zinc-600">no task yet</h3>
        <% } %>

            <div class="task w-72 hidden px-3 py-4 bg-zinc-800 rounded-md">
                <h1 class="text-white text-3xl traking-tighter">Title here</h1>
                <a href="" class="text-blue-500 inline-block mt-3">Read more</a>
                <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt sapiente dicta itaque fugit.</p> -->
            </div>

            <div class="task w-72 hidden px-3 py-4 bg-zinc-800 rounded-md">
                <h1 class="text-white text-3xl traking-tighter">Title here</h1>
                <a href="" class="text-blue-500 inline-block mt-3">Read more</a>
                <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt sapiente dicta itaque fugit.</p> -->
            </div>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>